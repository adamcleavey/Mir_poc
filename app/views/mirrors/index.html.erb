<div class="page-header">
  <%= link_to new_mirror_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Mirror
  <% end %>
  <h1>Listing mirrors</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Source</th>
            <th>Frequency</th>
            <th>Last updated</th>
            <th>Name</th>
            <th>Notes</th>
            <th>Mirrored url</th>
            <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @mirrors) do |mirror| %>
            <td><%= mirror.source %></td>
            <td><%= mirror.frequency %></td>
            <td><%= mirror.last_updated %></td>
            <td><%= mirror.name %></td>
            <td><%= mirror.notes %></td>
            <td><%= mirror.mirrored_url %></td>
            <td><%= link_to 'Show', mirror %></td>
        <td><%= link_to 'Edit', edit_mirror_path(mirror) %></td>
        <td><%= link_to 'Destroy', mirror, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tbody>
  </table>
</div>
